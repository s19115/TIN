    <script type="application/javascript" src="../../public/js/validationCommon.js"></script>
    <script type="application/javascript" src="../../public/js/validationBossForm.js"></script>
    <title>Loot Drop</title>
</head>
<body>
<header>
    <h1>Loot Drop</h1>
    <img src="../../public/images/logo.png" alt="Loot Drop Logo">
</header>
<nav>
    <ul>
        <li><a href="index.html">Main page</a></li>
